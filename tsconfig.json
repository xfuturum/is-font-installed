{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom"
    ],
    "outDir": "lib",
    "removeComments": true,
    "target": "ES5",
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "sourceRoot": "/"
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    "./src/**/*.test.ts"
  ]
}
